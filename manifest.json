{
    "name": "looq",
    "version": "1.2",
    "permissions": [
        "tabs",
        "clipboardRead",
        "clipboardWrite",
        "contextMenus",
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "scripts": [
            "js/background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "css": [
                "css/style.css",
                "css/animate-custom.css"
            ],
            "js": [
                "js/promise.js",
                "js/xpath.js",
                "js/util.js",
                "js/color.js",
                "js/range.js",
                "js/looq.js"
            ],
            "run_at": "document_end"
        }
    ],
    "sandbox": {
       "pages": [
           "index.html"
       ]
    },
    "offline_enabled": true,
    "icons": {
        "16": "icon16.png",
        "16": "icon19.png",
        "16": "icon32.png",
        "48": "icon48.png",
        "48": "icon100.png",
        "128": "icon128.png"
    },
    "web_accessible_resources": [
        "login.html",
        "img/looq-close.png"
    ],
    "manifest_version": 2
}