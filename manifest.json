{
    "name": "looq",
    "version": "1.1",
    "permissions": [
        "tabs",
        "clipboardRead",
        "clipboardWrite",
        "contextMenus",
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "scripts": [
            "js/background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "css": [
                "css/style.css"
            ],
            "js": [
                "js/looq.js"
            ]
        }
    ],
    "sandbox": {
       "pages": [
           "index.html"
       ]
    },
    "offline_enabled": true,
    "browser_action": {
        "default_icon": "icon.png",
        "description": "looq"
    },
    "manifest_version": 2
}